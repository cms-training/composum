                <version>2.4.8</version>
            </dependency>

            <!-- Groovy -->
            <!-- https://mvnrepository.com/artifact/org.codehaus.groovy/groovy -->
            <dependency>
                <groupId>org.codehaus.groovy</groupId>
                <artifactId>groovy</artifactId>
                <version>2.2.2</version>
                <!--<version>[2.2,)</version>-->
